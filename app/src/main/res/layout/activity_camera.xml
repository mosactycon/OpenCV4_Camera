<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.opencv.android.JavaCameraView
        android:layout_marginTop="77dp"
        android:layout_width="fill_parent"
        android:layout_height="630dp"

        android:id="@+id/frame_Surface"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:background="@color/black"
        android:layout_gravity="top"
        android:gravity="center"
        android:orientation="horizontal"
        >
        
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="110dp"
            android:src="@drawable/change_resolution_image"
            android:id="@+id/change_resolution_button"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/video_camera_button"
            android:src="@drawable/video_camera_button"
            />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="110dp"
            />

    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="77dp"
        android:id="@+id/set_resolution"
        android:layout_marginLeft="10dp"
        android:divider="@null"
        android:listSelector="#555"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/black"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/image_gallery_icon"
            android:src="@drawable/gallery_image"
            android:layout_marginTop="30dp"
            android:layout_marginRight="60dp"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/take_picture_button"
            android:src="@drawable/take_picture_icon"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/flip_camera"
            android:src="@drawable/flip_camera"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="60dp"/>

    </LinearLayout>

</FrameLayout>